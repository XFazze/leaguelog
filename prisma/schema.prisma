generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

  // relationMode = "prisma"
}

model User {
  updatedAt     DateTime @updatedAt
  accountId     String   @id
  profileIconId Int
  revisionDate  BigInt
  name          String
  id            String
  puuid         String
  summonerLevel Int
}

model Ratelimit {
  id   Int      @id @default(autoincrement())
  type String
  date DateTime @default(now())
}

model Rank {
  id                 Int      @id @default(autoincrement())
  createdAt          DateTime @default(now())
  leagueId           String
  summonerId         String
  summonerName       String
  queueType          String
  tier               String
  rank               String
  leaguePoints       Int
  wins               Int
  losses             Int
  hotStreak          Boolean
  veteran            Boolean
  freshBlood         Boolean
  inactive           Boolean
  miniSerieswins     Int?
  miniSerieslosses   Int?
  miniSeriesprogress String?
  miniSeriestarget   Int?
}

model MatchHistory {
  puuid   String   @id
  matches String[]
}

